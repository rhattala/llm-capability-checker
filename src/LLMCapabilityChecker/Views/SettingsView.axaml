<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LLMCapabilityChecker.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="LLMCapabilityChecker.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             Background="#000000">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="40" MaxWidth="800">

            <!-- Header -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Margin="0,0,16,0"
                        Cursor="Hand">
                    <TextBlock Text="← Back"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Button>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="Settings"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </Grid>

            <!-- Theme Settings -->
            <Border Background="#F5F5F5"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Appearance"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#212121"
                               Margin="0,0,0,16"/>

                    <!-- Theme Selector -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Theme:"
                                   FontSize="16"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding ThemeOptions}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  HorizontalAlignment="Stretch"
                                  MinWidth="200"/>
                    </Grid>

                    <TextBlock Text="Changes to theme are applied immediately"
                               FontSize="13"
                               Foreground="#999999"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Data & Updates Settings -->
            <Border Background="#F5F5F5"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Data &amp; Updates"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#212121"
                               Margin="0,0,0,16"/>

                    <!-- Auto-refresh -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Auto-refresh interval:"
                                   FontSize="16"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AutoRefreshIntervalOptions}"
                                  SelectedItem="{Binding SelectedAutoRefreshInterval}"
                                  HorizontalAlignment="Stretch"
                                  MinWidth="200"/>
                    </Grid>

                    <!-- Check for updates -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Check for updates on startup"
                                   FontSize="16"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"/>

                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding CheckForUpdatesOnStartup}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Display Settings -->
            <Border Background="#F5F5F5"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Display"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#212121"
                               Margin="0,0,0,16"/>

                    <!-- Advanced Metrics -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Show advanced metrics"
                                       FontSize="16"
                                       Foreground="#666666"/>
                            <TextBlock Text="Display detailed technical metrics in the dashboard"
                                       FontSize="13"
                                       Foreground="#999999"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding ShowAdvancedMetrics}"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Export Settings -->
            <Border Background="#F5F5F5"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Export"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#212121"
                               Margin="0,0,0,16"/>

                    <!-- Export Format -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Export format:"
                                   FontSize="16"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding ExportFormatOptions}"
                                  SelectedItem="{Binding SelectedExportFormat}"
                                  HorizontalAlignment="Stretch"
                                  MinWidth="200"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12">

                <!-- Reset to Defaults -->
                <Button Content="Reset to Defaults"
                        Command="{Binding ResetToDefaultsCommand}"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="24,12"
                        CornerRadius="4"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#F0F0F0"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <!-- Cancel -->
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="24,12"
                        CornerRadius="4"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#F0F0F0"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <!-- Save -->
                <Button Content="Save Changes"
                        Command="{Binding SaveCommand}"
                        Background="#1976D2"
                        Foreground="White"
                        Padding="24,12"
                        CornerRadius="4"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#42A5F5"/>
                        </Style>
                        <Style Selector="Button:pressed /template/ ContentPresenter">
                            <Setter Property="Background" Value="#0D47A1"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

            <!-- Unsaved Changes Indicator -->
            <TextBlock Text="You have unsaved changes"
                       IsVisible="{Binding HasUnsavedChanges}"
                       FontSize="14"
                       Foreground="#F57C00"
                       HorizontalAlignment="Right"
                       Margin="0,12,0,0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
